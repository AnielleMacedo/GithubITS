@model IEnumerable<BikeStoresMVC.Models.categories>

@{
    ViewBag.Title = "Index";
}

<h2>Elenco produtos by category</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.category_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.category_name)
        </td>
        <td>

            <!--crio o metodo :elenco produtos pra elencar produtos de cada categoria-->
            @Html.ActionLink("Produtos di Categoria " + item.category_name, "ElencoProdotti" , new { id=item.category_id }) 
        </td>
    </tr>
}

</table>
