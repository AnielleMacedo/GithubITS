@model IEnumerable<Esercitazione_GestionePrestitiBiblioteca.Models.Studente>

@{
    ViewBag.Title = "Elenco";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Elenco di Studenti</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cognome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Classe)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cognome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Classe)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Matricola }) 
        </td>
    </tr>
}

</table>
