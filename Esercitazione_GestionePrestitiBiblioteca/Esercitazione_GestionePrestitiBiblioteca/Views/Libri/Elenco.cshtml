@model IEnumerable<Esercitazione_GestionePrestitiBiblioteca.Models.Libro>

@{
    ViewBag.Title = "Elenco";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Elenco Libri</h2>

@using (Html.BeginForm()) { 

    <p>
        Name: @Html.TextBox("name")<br />
        <input type="search" value="search"/>
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Autore)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titolo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Editore)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Anno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Luogo)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Autore)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Titolo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Editore)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Anno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Luogo)
        </td>
        
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Codice }) 
        </td>
    </tr>
}

</table>
