@model IEnumerable<GestioneBiblio2.Models.Libro>

@{
    ViewBag.Title = "ElencoLibri";
}

<h2>ElencoLibri</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Autore)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titolo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Editore)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Anno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Luogo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pagine)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Classificazione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Collocazione)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Autore)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Titolo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Editore)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Anno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Luogo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pagine)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Classificazione)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Collocazione)
        </td>
       
    </tr>
}

</table>
