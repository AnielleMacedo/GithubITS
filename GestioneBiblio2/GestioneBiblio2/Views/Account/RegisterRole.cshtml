@model GestioneBiblio2.Models.RegisterViewModel

@*@model IEnumerable<GestioneBiblio2.Models.RegisterViewModel>*@

@{
    ViewBag.Title = "RegisterRole";
}

<h2>Assegna Ruolo all' Utente</h2>

<!--View viene dal metodo RegisterRole di controller Account-->
@using (Html.BeginForm("RegisterRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()



    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("Seleziona Utente", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("UserName")
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Seleziona Ruolo", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("Name") 
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input onclick="return alert('Ruolo Assegnato!')" type="submit" value="Assegna Ruolo" class="btn alert-info" />
        </div>
    </div>

   
   
}

